<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_left"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/right_arrow_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_right_arrow"
            android:gravity="center" />

        <com.visilabs.inApp.notification.VerticalTextView
            android:id="@+id/right_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLength="30"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners_right"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/left_arrow_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_left_arrow"
            android:gravity="center" />

        <com.visilabs.inApp.notification.VerticalTextView
            android:id="@+id/left_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLength="30"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</RelativeLayout>