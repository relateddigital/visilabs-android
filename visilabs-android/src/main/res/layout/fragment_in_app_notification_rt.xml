<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="@dimen/in_app_notification_big_width"
        android:layout_height="@dimen/in_app_notification_big_height"
        android:id="@+id/big_container_rt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" >

        <ImageView
            android:id="@+id/big_background_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/big_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:scaleType="fitXY" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/in_app_notification_small_width"
        android:layout_height="@dimen/in_app_notification_small_height"
        android:id="@+id/small_square_container_rt"
        android:layout_toLeftOf="@+id/big_container_rt"
        android:layout_toStartOf="@+id/big_container_rt"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/small_square_background_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.visilabs.inappnotification.VerticalTextView
            android:id="@+id/small_square_text_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLength="@integer/in_app_notification_small_max_character"
            android:padding="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/small_square_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/arrow_square_rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal|top"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/in_app_notification_small_radius"
        android:layout_height="@dimen/in_app_notification_small_circle_height"
        android:id="@+id/small_circle_container_rt"
        android:layout_toLeftOf="@+id/big_container_rt"
        android:layout_toStartOf="@+id/big_container_rt"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp">

        <ImageView
            android:id="@+id/small_circle_background_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.visilabs.inappnotification.VerticalTextView
            android:id="@+id/small_circle_text_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:maxLength="@integer/in_app_notification_small_max_character"
            android:padding="8dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/small_circle_image_rt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/arrow_circle_rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginStart="10dp" />
    </FrameLayout>
</RelativeLayout>