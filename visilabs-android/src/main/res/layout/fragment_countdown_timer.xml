                android:layout_toRightOf="@id/hour_num_bot"
                android:text="@string/colon"
                android:textSize="@dimen/ct_timer_num_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minute_num_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ct_timer_num_divider_margin"
                android:layout_marginLeft="@dimen/ct_timer_num_divider_margin"
                android:layout_toEndOf="@+id/divider3_bot"
                android:layout_toRightOf="@+id/divider3_bot"
                android:textSize="@dimen/ct_timer_num_size"
