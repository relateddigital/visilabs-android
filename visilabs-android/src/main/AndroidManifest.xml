        <activity
            android:name="com.visilabs.story.StoryActivity"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.visilabs.util.PermissionActivity"
            android:noHistory="true"
            android:theme="@style/Theme.Transparent" />
